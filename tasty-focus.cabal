cabal-version:   2.4
name:            tasty-focus
version:         0
license:         BSD-3-Clause
build-type:      Simple
extra-doc-files:
  CHANGELOG.md
  README.md

license-file:    LICENSE
author:          Jonas Carpay
maintainer:      Jonas Carpay <jonascarpay@gmail.com>
copyright:       2020 Jonas Carpay

-- tested-with:     GHC ==8.8.3
-- category:        CATEGORIES

common common-options
  build-depends:    base >=4.13.0.0 && <5
  default-language: Haskell2010
  ghc-options:
    -Wall -Wcompat -Widentities -Wincomplete-uni-patterns
    -Wincomplete-record-updates -Wredundant-constraints
    -fhide-source-paths -Wpartial-fields

library
  import:          common-options
  hs-source-dirs:  src
  exposed-modules: Lib
  build-depends:
    , containers
    , mtl

executable tasty-focus-exe
  import:         common-options
  hs-source-dirs: app
  main-is:        Main.hs
  build-depends:  tasty-focus
  ghc-options:    -threaded -rtsopts -with-rtsopts=-N

test-suite tasty-focus-test
  import:         common-options
  type:           exitcode-stdio-1.0
  hs-source-dirs: test
  main-is:        Spec.hs
  build-depends:
    , tasty-focus
    , tasty
    , tasty-expected-failure
    , tasty-hunit
    , tasty-quickcheck

  ghc-options:    -threaded -rtsopts -with-rtsopts=-N

benchmark tasty-focus-bench
  import:         common-options
  type:           exitcode-stdio-1.0
  hs-source-dirs: bench
  main-is:        Main.hs
  build-depends:
    , criterion
    , tasty-focus

  ghc-options:    -threaded -rtsopts -with-rtsopts=-N
